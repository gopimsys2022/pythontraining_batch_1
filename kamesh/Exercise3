#calculate length and width
length = float(input("Enter length: "))
width = float(input("Enter width: "))
area = length * width 
perimeter = 2 * (length + width)
print(area)
print(perimeter)

#Get a Radius (pi = 3.14)
r = float(input("Enter radius: "))
area = 3.14 * r * r
print(r)
circumference = 2 * 3.14 * r
print(area)
print(circumference) 

#calculate slope 
#x = 0, y =2(0)-2 = -2 -> (0,-2)
point1 = (0,-2)
point2  = (1,0)

x1,y1 = point1 
x2,y2 = point2 

slope = (y2 - y1) / (x2 - x1) 
x_intercept = (0 - (-2)) / 2 
y_intercept = y1
print(slope)

#find slope and euclidean distance 
point1 = (2,2)
point2 = (6,10)

x1, y1 = point1
x2, y2 = point2

slope = (y2 - y1) / (x2 - x1)
distance = ((x2 - x1) ** 2 + (y2 - y1) ** 2) ** 0.5

print(slope)
print(distance)


#length comp
