#convert value 
text = "python"
length = len(text)
length_float = float(length)
length_string = str(length_float)
print(length)
print(length_float)
print(length_string)

#Even or not 
Num = 4 
if Num%2 == 0:
    print("Even")
else:
    print("Odd")

#floor division 
floor_division = 7 // 3 
int_value = int(2.7)
is_equal = floor_division == int_value 
print(is_equal)

#check type 
String = "10"
integer = 10
